{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@langctrl/*": ["src/*"],
      "@langctrl/utils/*": ["src/utils/*"],
      "@langctrl/types/*": ["src/types/*"],
      "@langctrl/config/*": ["src/config/*"],
      "@langctrl/modules/*": ["src/modules/*"],
      "@langctrl/schemas/*": ["src/schemas/*"],
      "@langctrl/entities/*": ["src/entities/*"],
      "@langctrl/constants/*": ["src/constants/*"],
      "@langctrl/factories/*": ["src/factories/*"]
    }
  },
  "exclude": ["node_modules"]
}
