{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@schemas/*": ["src/schemas/*"],
      "@entities/*": ["src/entities/*"],
      "@constants/*": ["src/constants/*"],
      "@factories/*": ["src/factories/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
